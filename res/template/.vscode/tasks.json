{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "PREBUILD_TASK",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "\"${workspaceFolder}\\pyappcore-prebuild.bat\""
            ],
            "runOptions": {
                "instanceLimit": 1
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "DEBUG_TASK",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "${config:pyappcore.debug.launcherFilePath}",
                "${config:pyappcore.debug.symbols}",
                "${config:pyappcore.debug.arguments}"
            ],
            "dependsOn": "PREBUILD_TASK",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 0,
                    "location": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*pyappcore\\.launcher\\.debugpy\\.start().*$",
                    "endsPattern": "^.*pyappcore\\.launcher\\.debugpy\\.wait().*$"
                }
            },
            "presentation": {
                "reveal": "silent",
                "focus": false
            },
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "label": "BUILD_TASK",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "\"${workspaceFolder}\\pyappcore-build.bat\""
            ],
            "runOptions": {
                "instanceLimit": 1
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}