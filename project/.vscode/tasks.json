{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "SETUP_TASK",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "& '${workspaceFolder}/tools/setup.bat' '${workspaceFolder}'"
            ],
            "runOptions": {
                "instanceLimit": 1
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "DEBUG_TASK",
            "type": "shell",
            "command": "${config:blender.defaultPath}",
            "args": [
                "--background",
                "--python",
                "${config:launcher.launcherFilePath}",
                "DEBUG/LOG",
                "${config:launcher.arguments}"
            ],
            "isBackground": true,
            "dependsOn": "SETUP_TASK",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 0,
                    "location": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*pyappcore\\.launcher\\.debugpy\\.start().*$",
                    "endsPattern": "^.*pyappcore\\.launcher\\.debugpy\\.wait().*$"
                }
            },
            "presentation": {
                "reveal": "silent",
                "focus": false
            },
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "label": "BUILD_TASK",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "& '${workspaceFolder}/tools/build.bat' '${workspaceFolder}' '${config:launcher.launcherFilePath}' '${config:launcher.build.executeFileName}' '${config:launcher.build.isHideConsole}'"
            ],
            "runOptions": {
                "instanceLimit": 1
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}