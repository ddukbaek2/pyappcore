{
    "configurations": [
        {
            "name": "Debug",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "DEBUG_TASK",
            "connect": {
                "host": "localhost",
                "port": "${config:pyappcore.debug.remotePort}"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
        },
        {
            "name": "No Debug",
            "type": "PowerShell",
            "request": "launch",
            "script": "tools/run.bat",
			"args": [
				"${workspaceFolder}",
				"${config:pyappcore.launcherFilePath}",
                "NODEBUG/LOG",
                "${config:pyappcore.nodebug.arguments}",
			],
            "cwd": "${workspaceFolder}"
        }
    ]
}